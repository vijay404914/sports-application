<%= form_for(user, url: users_path, method: :post,  html: { class: 'sign-up-form' }) do |f| %>
  <div class="container">
    <h2 class="text-center">User Create</h2>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Enter Full Name' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :reference, class: 'form-label' %>
          <%= f.text_field :reference, autofocus: true, class: 'form-control', placeholder: 'Enter Reference' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Enter Password' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Password' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :share_type, class: 'form-label' %>
          <%= f.text_field :share_type, autofocus: true, class: 'form-control', placeholder: 'Select Share Type' %>
        </div>
      </div>
    </div>
    <h5 class="my-3 text-center">Super Agent Match Share and Commission</h5>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :my_match_share, class: 'form-label' %>
          <%= f.text_field :my_match_share, autofocus: true, class: 'form-control', placeholder: 'Enter Full Name' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :match_share, class: 'form-label' %>
          <%= f.text_field :match_share, autofocus: true, class: 'form-control', placeholder: 'Match Share' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :my_match_comm, class: 'form-label' %>
          <%= f.text_field :my_match_comm, autofocus: true, class: 'form-control', placeholder: 'My Match Comm' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :match_comm, class: 'form-label' %>
          <%= f.text_field :match_comm, autofocus: true, class: 'form-control', placeholder: 'Match Comm' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :my_sess_comm, class: 'form-label' %>
          <%= f.text_field :my_sess_comm, autofocus: true, class: 'form-control', placeholder: 'My Sess Comm' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :sess_comm, class: 'form-label' %>
          <%= f.text_field :sess_comm, autofocus: true, class: 'form-control', placeholder: 'Sess Comm' %>
        </div>
      </div>
    </div>
    <h5 class="my-3 text-center">Super Agent Casino Share and Commission</h5>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :my_casino_share, class: 'form-label' %>
          <%= f.text_field :my_casino_share, autofocus: true, class: 'form-control', placeholder: 'My Casino Share' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :casino_share, class: 'form-label' %>
          <%= f.text_field :casino_share, autofocus: true, class: 'form-control', placeholder: 'Casino Share' %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :my_casino_comm, class: 'form-label' %>
          <%= f.text_field :my_casino_comm, autofocus: true, class: 'form-control', placeholder: 'My Casino Comm' %>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="form-group mb-3">
          <%= f.label :casino_comm, class: 'form-label' %>
          <%= f.text_field :casino_comm, autofocus: true, class: 'form-control', placeholder: 'Casino Comm' %>
        </div>
      </div>
    </div>
    <%= f.hidden_field :role, value: user.role %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="form-group text-center">
      <%= f.submit 'Create', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
